---
import "../styles/global.css"; // brings in Tailwind and your font imports
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="NTREG - The Truth About Residential Solar" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="font-inter"> 
    <slot />
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    background-color: #f8f8f8;
  }
</style>